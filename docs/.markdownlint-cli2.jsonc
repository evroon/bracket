{
    "config": {
        "default": true,
        "line-length": {
          "strict": true,
          "code_blocks": false,
          "line_length": 100
        },

        // part of the markdownlint-rule-relative-links plugin
        "relative-links": true
    },
    "globs": [
        "**/*.{md,mdx}"
    ],
    "ignores": [
        "node_modules",
        "static"
    ],
    "customRules": [
        "markdownlint-rule-relative-links"
    ]
}
